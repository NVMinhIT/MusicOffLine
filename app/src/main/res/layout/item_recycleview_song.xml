<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="wrap_content"
   >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_song"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_line"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="@dimen/dp_12" />

    <TextView
        android:id="@+id/name_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_song"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginLeft="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/name_singer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_song"
        android:layout_marginTop="5dp"
        android:textColor="#BDB8B8"
        android:layout_marginLeft="18dp"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_song"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/image_song"
        android:layout_marginHorizontal="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        android:id="@+id/txt_line"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#E0E0E0"
        tools:ignore="UnusedAttribute" />
</android.support.constraint.ConstraintLayout>